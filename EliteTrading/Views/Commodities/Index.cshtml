@model IEnumerable<EliteTrading.Entities.Commodity>

@{
    ViewBag.Title = "Commodities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ContentContainer">
    <h2>Commodities</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GalacticAveragePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Max)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Min)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GalacticAveragePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Max)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Min)
                    </td>
                    <td>
                        @if (User.IsInRole("Master")) {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            @: |
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        }
                        @if (User.IsInRole("Dangerous")) {
                            @: |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>