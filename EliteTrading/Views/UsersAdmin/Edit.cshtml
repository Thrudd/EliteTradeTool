@model EliteTrading.Models.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "User Admin - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ContentContainer" style="min-height:500px">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(m => m.Rank)

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CommanderName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CommanderName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CommanderName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rank, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    <p class="form-control-static">@Html.DisplayFor(m => m.Rank)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Reputation, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Reputation, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Reputation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Roles", new { @class = "control-label col-md-2" })
                <span class=" col-md-10">
                    @foreach (var item in Model.RolesList) {
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@(item.Selected)" class="checkbox-inline" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }
                </span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" /> @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
